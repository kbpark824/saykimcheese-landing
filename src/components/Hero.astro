---
import RotatingIngredients from "../islands/RotatingIngredients.jsx";
---
<section class="relative w-full h-[90vh] flex items-center" style="margin: 0; padding: 0;">
  <div class="w-full h-full">
    <div class="grid grid-rows-2 lg:grid-rows-1 lg:grid-cols-5 items-center h-full min-h-full">
      
      <!-- Left side - Hero content (60%) -->
      <div class="lg:col-span-3 relative h-full">
        <div 
          class="absolute inset-0 bg-cover bg-center bg-no-repeat h-full w-full"
          style="background-image: url(/images/boards/hero.webp)">
        </div>
        <div class="absolute inset-0 bg-black/40"></div>
        <div class="relative z-10 p-8 lg:p-16 text-white h-full flex flex-col justify-center">
          <h1 class="text-4xl lg:text-6xl/tight font-serif font-bold mb-6">
            Beautiful charcuterie for unforgettable events
          </h1>
          <p class="text-xl lg:text-2xl opacity-90 mb-8 max-w-2xl">
            Hand-crafted grazing boards & tables for weddings, showers, and corporate events in NYC.
          </p>
          <div>
            <a 
              href="#contact" 
              class="inline-block bg-amber-600 hover:bg-amber-700 text-white px-8 py-4 rounded-full text-lg font-semibold transition-colors shadow-lg"
            >
              Get a quote
            </a>
          </div>
        </div>
      </div>

      <!-- Right side - Dynamic rotating ingredients (40%) -->
      <div class="lg:col-span-2 h-full">
        <RotatingIngredients client:load />
      </div>

    </div>
  </div>
</section>